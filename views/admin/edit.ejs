<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Shipment</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="sidebar" id="sidebar">
    <h2><i class="fas fa-shipping-fast"></i> ShipTrack</h2>
    <ul class="sidebar-menu">
      <li><a href="/shipment/dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
      <li><a href="/shipment/create"><i class="fas fa-plus-circle"></i> Create Shipment</a></li>
      <li><a href="/shipment/history/all"><i class="fas fa-list"></i> All Shipments</a></li>
      <li><a href="#"><i class="fas fa-cog"></i> Settings</a></li>
    </ul>
  </div>

  <div class="main-content">
    <button class="mobile-toggle" onclick="toggleSidebar()">
      <i class="fas fa-bars"></i>
    </button>

    <div class="header">
      <h1><i class="fas fa-edit"></i> Edit Shipment</h1>
      <div class="user-info">
        <div class="user-avatar">A</div>
        <span><strong>Admin</strong></span>
      </div>
    </div>

    <% if (success) { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span><%= success %></span>
      </div>
    <% } %>

    <form action="/shipments/<%= shipment._id %>?_method=PUT" method="POST" class="form-container">
      <input type="hidden" name="shipmentId" value="<%= shipment._id %>">
      
      <!-- Tracking Number -->
      <div class="form-section">
        <h3><i class="fas fa-barcode"></i> Tracking Number</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Tracking Number (Read Only)</label>
            <input type="text" name="trackingNumber" value="<%= shipment.trackingNumber %>" readonly style="background: #f0f0f0;">
          </div>
        </div>
      </div>

      <!-- Shipper Info -->
      <div class="form-section">
        <h3><i class="fas fa-industry"></i> Shipper Information</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Name *</label>
            <input type="text" name="shipperName" value="<%= shipment.shipperName %>" required>
          </div>
          <div class="form-group">
            <label>Contact *</label>
            <input type="tel" name="shipperContact" value="<%= shipment.shipperContact %>" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label>Email *</label>
            <input type="email" name="shipperEmail" value="<%= shipment.shipperEmail %>" required>
          </div>
          <div class="form-group">
            <label>Address *</label>
            <input type="text" name="shipperAddress" value="<%= shipment.shipperAddress %>" required>
          </div>
        </div>
      </div>

      <!-- Receiver Info -->
      <div class="form-section">
        <h3><i class="fas fa-user-circle"></i> Receiver Information</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Name *</label>
            <input type="text" name="receiverName" value="<%= shipment.receiverName %>" required>
          </div>
          <div class="form-group">
            <label>Contact *</label>
            <input type="tel" name="receiverContact" value="<%= shipment.receiverContact %>" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label>Email *</label>
            <input type="email" name="receiverEmail" value="<%= shipment.receiverEmail %>" required>
          </div>
          <div class="form-group">
            <label>Address *</label>
            <input type="text" name="receiverAddress" value="<%= shipment.receiverAddress %>" required>
          </div>
        </div>
      </div>

      <!-- Shipment Details -->
      <div class="form-section">
        <h3><i class="fas fa-shipping-fast"></i> Shipment Details</h3>
        <div class="form-row">
          <div class="form-group">
            <label>Service Type *</label>
            <select name="serviceType" required>
              <option value="">Select Service</option>
              <option value="Air Freight" <%= shipment.serviceType === 'Air Freight' ? 'selected' : '' %>>Air Freight</option>
              <option value="Sea Freight" <%= shipment.serviceType === 'Sea Freight' ? 'selected' : '' %>>Sea Freight</option>
              <option value="Road Freight" <%= shipment.serviceType === 'Road Freight' ? 'selected' : '' %>>Road Freight</option>
              <option value="Express Delivery" <%= shipment.serviceType === 'Express Delivery' ? 'selected' : '' %>>Express Delivery</option>
            </select>
          </div>
          <div class="form-group">
            <label>Departure Date *</label>
            <input type="date" name="departureDate" value="<%= shipment.departureDate ? shipment.departureDate.toISOString().substring(0,10) : '' %>" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label>Expected Delivery *</label>
            <input type="date" name="expectedDelivery" value="<%= shipment.expectedDelivery ? shipment.expectedDelivery.toISOString().substring(0,10) : '' %>" required>
          </div>
          <div class="form-group">
            <label>Destination *</label>
            <input type="text" name="destination" value="<%= shipment.destination %>" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label>Description *</label>
            <input type="text" name="description" value="<%= shipment.description %>" required>
          </div>
          <div class="form-group">
            <label>Total Weight (kg) *</label>
            <input type="number" step="0.1" name="totalWeight" value="<%= shipment.totalWeight %>" required>
          </div>
        </div>
      </div>

      <!-- Packages -->
      <div class="form-section">
        <h3><i class="fas fa-boxes"></i> Package Details</h3>
        <div id="packagesContainer">
          <% if (shipment.packages && shipment.packages.length > 0) { %>
            <% shipment.packages.forEach(function(pkg, index) { %>
              <div class="form-row">
                <div class="form-group">
                  <label>Package <%= index + 1 %> Description</label>
                  <input type="text" name="packages[<%= index %>][description]" value="<%= pkg.description %>">
                </div>
                <div class="form-group">
                  <label>Weight (kg)</label>
                  <input type="number" step="0.1" name="packages[<%= index %>][weight]" value="<%= pkg.weight %>">
                </div>
              </div>
            <% }); %>
          <% } %>
        </div>
        <button type="button" class="btn btn-secondary" onclick="addPackage()">
          <i class="fas fa-plus"></i> Add Package
        </button>
      </div>

      <div class="button-group">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> Save Changes
        </button>
        <a href="/shipment/history/all" class="btn btn-secondary">
          <i class="fas fa-times"></i> Cancel
        </a>
      </div>
    </form>
  </div>

  <script src="/js/edit-shipment.js"></script>
</body>
</html>
