<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - Xpress</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .login-box {
        background: white;
        padding: 40px 50px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        width: 350px;
      }

      .login-box h1 {
        margin-bottom: 20px;
        color: #1a3a5c;
      }

      .login-box p {
        color: #666;
        margin-bottom: 25px;
        font-size: 0.95em;
      }

      .login-box input {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1em;
      }

      .login-box button {
        width: 100%;
        padding: 12px;
        background: #667eea;
        border: none;
        color: white;
        border-radius: 8px;
        font-size: 1em;
        cursor: pointer;
        transition: background 0.3s;
      }

      .login-box button:hover {
        background: #5a60d1;
      }

      .hint {
        background: #f8f9fa;
        padding: 8px;
        border-radius: 6px;
        margin-bottom: 15px;
        color: #555;
        font-size: 0.9em;
      }

      .error {
        color: #dc3545;
        background: #ffeaea;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 15px;
        font-size: 0.9em;
      }
    </style>
  </head>
  <body>
    <div class="login-box">
      <i
        class="fas fa-user-shield"
        style="font-size: 2.5em; color: #667eea; margin-bottom: 15px"
      ></i>
      <h1>Admin Access</h1>
      <p>Enter today's date to access the dashboard</p>

      <% if (typeof error !== 'undefined') { %>
      <div class="error"><%= error %></div>
      <% } %>

      <div class="hint">
        <i class="fas fa-calendar-day"></i>
        Today is: <strong id="todayDate"></strong>
      </div>

      <form method="POST" action="/shipment/login">
        <input
          type="text"
          name="date"
          id="date"
          placeholder="Enter date (DD/MM/YYYY)"
          required
        />

        <button type="submit">Login</button>
      </form>
    </div>

    <script>
      // Auto-detect todayâ€™s date and show as hint
      const today = new Date();
      const day = String(today.getDate()).padStart(2, "0");
      const month = String(today.getMonth() + 1).padStart(2, "0");
      const year = today.getFullYear();
      const todayString = `${day}/${month}/${year}`;

      document.getElementById("todayDate").textContent = todayString;
    </script>
  </body>
</html>
